<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/profile_grid_activity"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:columnCount="2"
    android:rowCount="6"
    android:orientation="horizontal"
    android:paddingTop="20sp"
    android:paddingLeft="10sp"
    android:paddingRight="10sp"
     >

    <TextView
        android:text="@string/shop_name_label"
        style="@style/default_form_label"
     />
    <TextView
        android:id="@+id/shop_name"
        android:text="@string/shop_name"
        style="@style/default_form_value"
     />
    <TextView
        android:text="@string/owner_name_label"
        style="@style/default_form_label"

        />
    <TextView
        android:id="@+id/owner_name"
        android:text="@string/owner_name"
        style="@style/default_form_value"
        />
    <TextView
        android:text="@string/working_days_label"
        style="@style/default_form_label"
        />

    <TextView
        android:id="@+id/working_days"
        android:text="@string/working_days"
        style="@style/default_form_value"
        />
    <TextView
        android:text="@string/working_hours_label"
        style="@style/default_form_label"
        />
    <TextView
        android:id="@+id/working_hours"
        android:text="@string/working_hours"
        style="@style/default_form_value"
        />
    <TextView
        android:text="@string/shop_phone_number_label"
        style="@style/default_form_label"
        />
    <TextView
        android:id="@+id/shop_phone_number"
        android:text="@string/shop_phone_number"
        style="@style/default_form_value"
        />
    <TextView
        android:text="@string/shop_address_label"
        style="@style/default_form_label"
        />
    <TextView
        android:id="@+id/shop_address"
        android:text="@string/shop_address"
        android:width="0dp"
        android:layout_gravity="fill_horizontal"
        android:layout_rowSpan="5"
        android:textSize="18sp"
        android:layout_height="70dp"
        style="@style/default_form_value"
        />



</GridLayout>
