<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:layout_gravity="bottom"
    tools:context="com.somworld.seller_ui.views.common.NoInternetConnectionActivity">

    <TextView
            android:id="@+id/information_message"
            android:text="@string/network_is_not_connected"
            android:padding="10dp"
            android:textSize="15sp"
            android:gravity="center"
            android:textColor="@color/action_bar_title_white"
            android:background="@drawable/home_information"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

</RelativeLayout>
