<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent">
    <ListView android:id="@+id/multi_select_list"
              android:choiceMode="multipleChoice"
              android:layout_width="match_parent" android:layout_height="wrap_content"></ListView>

    <LinearLayout
            android:layout_marginTop="40dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_margin="5sp"
            android:paddingTop="5dp"
            android:paddingRight="10dp"
            android:paddingBottom="5dp"
            android:gravity="right"
            android:layout_height="wrap_content">

        <Button
                android:id="@+id/cancel_button"
                style="@style/default_button_style"
                android:text="@string/cancel_button_text"
                android:background="@drawable/default_cancel_button_style_selector"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/date_picker_default_height" />
        <Button
                android:layout_marginLeft="15dp"
                android:id="@+id/save_button"
                android:text="@string/save_button_text"
                style="@style/default_button_style"
                android:background="@drawable/default_save_button_style_selector"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/date_picker_default_height" />
    </LinearLayout>

</LinearLayout>