<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:layout_gravity="bottom"
    android:animateLayoutChanges="true"
    tools:context="com.somworld.seller_ui.views.HomeActivity">

        <LinearLayout

                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                android:gravity="center"
                >
        <Button android:id="@+id/home_reload"
                style="@style/default_button_style"
                android:textSize="18dp"
                android:padding="10dp"
                android:background="@drawable/default_save_button_style_selector"
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:text="Try Again"/>
        </LinearLayout>
    <TextView
            android:visibility="gone"
            android:id="@+id/information_message"
            android:text="@string/network_is_not_connected"
            android:padding="10dp"
            android:textSize="15sp"
            android:gravity="center_horizontal"
            android:layout_alignParentBottom="true"
            android:textColor="@color/action_bar_title_white"
            android:background="@drawable/home_information"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


</RelativeLayout>
