<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/Theme.defaultAppTheme.ActionBar</item>
    </style>

    <style name="Theme.defaultAppTheme.ActionBar" parent="@android:style/Widget.Holo.ActionBar">
        <item name="android:background">@color/action_bar_background_blue</item>
        <item name="android:height">60sp</item>
        <item name="android:icon">@android:color/transparent</item>
        <item name="android:titleTextStyle">@style/Theme.defaultAppTheme.ActionBar.TitleTextStyle</item>
    </style>

    <style name="Theme.defaultAppTheme.ActionBar.TitleTextStyle" parent="android:TextAppearance">
       <item name="android:textColor">@color/action_bar_title_white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="OfferListProductName" parent="android:TextAppearance">
        <item name="android:textSize">21sp</item>
        <item name="android:textColor">@color/dashboard_list_item_heading_green</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="defaultErrorMessageTextView" parent="android:TextAppearance">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/default_error_message_text_red</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="OfferListDescription" parent="android:TextAppearance">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/dashboard_list_item_content_black</item>
    </style>


    <style name="OfferListTime" parent="android:TextAppearance">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/dashboard_list_item_content_black</item>
    </style>
    <style name="default_form_edit_text" parent="android:TextAppearance">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/form_edit_text_grey</item>
        <item name="android:paddingLeft">5dp</item>
    </style>

    <style name="default_text_heading" parent="android:TextAppearance">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/default_heading_blue</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="default_button_style" parent="android:Widget.Button">
        <item name="android:textColor">@color/default_button_text_white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="default_form_label" parent="android:Widget.TextView">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#375155</item>
        <item name="android:textStyle">bold</item>
        <item name="android:height">40sp</item>
        <item name="android:layout_marginRight">20sp</item>
    </style>

    <style name="default_form_value" parent="android:Widget.TextView">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#375155</item>
        <item name="android:height">40sp</item>
    </style>

    <style name="Theme.defaultAppTheme.AlertDialog.heading" parent="@android:style/Widget.Holo.ActionBar">
        <item name="android:background">@color/action_bar_background_blue</item>
        <item name="android:height">40sp</item>
        <item name="android:icon">@android:color/transparent</item>
        <item name="android:titleTextStyle">@style/Theme.defaultAppTheme.AlertDialog.heading.TitleTextStyle</item>
    </style>

    <style name="Theme.defaultAppTheme.AlertDialog.heading.TitleTextStyle" parent="android:Widget.TextView">
        <item name="android:textColor">@color/action_bar_title_white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="Theme.defaultAppTheme.AlertDialog.contentTextStyle" parent="android:Widget.TextView">
        <item name="android:textColor">@color/default_text_color_black</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Theme.defaultAppTheme.multi_select_list_row" parent="android:Widget.TextView">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/multiselct_row_color_text</item>
    </style>
    
    <style name="dialog_animation">
        <item name="android:windowEnterAnimation">@anim/anim_bottom_in</item>
        <item name="android:windowExitAnimation">@anim/anim_bottom_out</item>
    </style>
    <style name="activity_as_popup">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:gravity">bottom</item>
        <item name="android:windowAnimationStyle">@style/dialog_animation</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
    </style>



</resources>
